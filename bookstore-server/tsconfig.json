{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "bookstore-shared/*": ["../bookstore-shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
